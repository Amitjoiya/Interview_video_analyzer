# APEX-7 Server Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!

# ===========================================
# REQUIRED: Google Gemini API Key
# ===========================================
# Get your free API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY='your_gemini_api_key_here'

# ===========================================
# REQUIRED: MongoDB Database
# ===========================================
# Local MongoDB: mongodb://localhost:27017/apex7
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/apex7
MONGODB_URI='mongodb://localhost:27017/apex7'

# ===========================================
# REQUIRED: JWT Authentication
# ===========================================
# Secret key for signing JWT tokens (use a strong random string)
# Generate one: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET='your_super_secret_jwt_key_here_make_it_long_and_random'

# Token expiration time (default: 7 days)
JWT_EXPIRES_IN='7d'

# ===========================================
# REQUIRED: Razorpay Payment Gateway
# ===========================================
# Get your keys from: https://dashboard.razorpay.com/app/keys
# Use Test keys for development, Live keys for production
RAZORPAY_KEY_ID='rzp_test_your_key_id_here'
RAZORPAY_KEY_SECRET='your_razorpay_key_secret_here'

# ===========================================
# OPTIONAL: Redis Configuration
# ===========================================
# Used for request queuing. If not available, server uses in-memory queue
# Default: redis://127.0.0.1:6379
REDIS_URL='redis://127.0.0.1:6379'

# ===========================================
# OPTIONAL: Rate Limiting
# ===========================================
# Maximum concurrent requests to Gemini API
# Default: 1
MAX_CONCURRENT=1

# Maximum requests per minute per IP address
# Default: 10
MAX_REQUESTS_PER_MINUTE=10

# ===========================================
# OPTIONAL: Server Configuration
# ===========================================
# Server port (default: 5001)
PORT=5001

# Node environment: development | production
NODE_ENV='development'
